<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SecretSanta - @ViewBag.Title</title>
    <!-- Stylesheets -->
    <% for (var filename in htmlWebpackPlugin.files.css) { %>
    <link href="~<%= htmlWebpackPlugin.files.css[filename] %>" rel="stylesheet" />
    <% } %>
    <!-- End Stylesheets -->
</head>
<body>
    <header class="bg-red-300 text-white flex flex-col sm:flex-row justify-between p-6">
        <div class="flex flex-row justify-between">
            <a class="align-middle text-2xl sm:p-4 sm:leading-6" asp-controller="Home" asp-action="Index">Secret Santa</a>
            <button class="sm:hidden" onclick="toggleMenuWithJs()"><i class="fas fa-bars text-2xl align-middle h-full"></i></button>
        </div>
        <nav id="templateNav" class="hidden sm:inline-block">
            <ul class="flex flex-col sm:flex-row">
                <li><a asp-controller="Users" asp-action="Index">Users</a></li>
                <li><a asp-controller="Groups" asp-action="Index">Groups</a></li>
                <li><a asp-controller="Gifts" asp-action="Index">Gifts</a></li>
            </ul>
        </nav>
    </header>

    <div class="m-4">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <% for (var index in htmlWebpackPlugin.files.js) { %>
    <script src="~<%= htmlWebpackPlugin.files.js[index] %>"></script>
    <% } %>

    <script>
        function toggleMenuWithJs() {
            var templateNav = document.getElementById("templateNav");
            if (templateNav) {
                if (templateNav.classList.contains("hidden")) {
                    templateNav.classList.remove("hidden");
                }
                else {
                    templateNav.classList.add("hidden");
                }
            }
        }
    </script>
    <!-- End Scripts -->
</body>
</html>